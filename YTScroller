javascript:krazete:function videoAnchor(){var e,t,n,i,o,l,d,r;document.getElementsByClassName("miniplayer")[0].parentElement.active||(e=document.getElementById("movie_player"),t=document.getElementsByTagName("video")[0],n=document.getElementsByClassName("ytp-chrome-bottom")[0],i=document.getElementById("masthead-container").getBoundingClientRect(),d=document.querySelector("#player-container.ytd-watch-flexy").getBoundingClientRect(),e.removeAttribute("style"),o=e.getBoundingClientRect(),l=t.getBoundingClientRect(),d.bottom<i.height?(d=(document.getElementById("primary-inner")||document.getElementById("primary")).getBoundingClientRect(),d=(window.innerWidth-d.right)/l.width,r=window.innerHeight/l.height,e.style.position="fixed",e.style.right=0,e.style.top=i.height+"px",e.style.width=l.width+"px",e.style.height=l.height+"px",e.style.transformOrigin="right top",e.style.transform="scale("+Math.min(d,r)+")",e.style.zIndex=1500,n.style.left="12px",n.style.width=l.width-24+"px",t.style.left=0):(n.style.left="12px",n.style.width=o.width-24+"px",t.style.left=(o.width-l.width)/2+"px"))}function scrollAnchor(){var n,i=window.scrollX,o=window.scrollY;requestAnimationFrame(function e(t){window.scrollTo(i,o),t-(n=void 0===n?t:n)<1&&requestAnimationFrame(e)})}window.addEventListener("scroll",videoAnchor),window.addEventListener("resize",videoAnchor),window.addEventListener("mouseup",scrollAnchor);
